#. type: verbatim
#: dos2unix.pod:448
#, no-wrap
msgid ""
"    unix2dos < in.txt | iconv -f UTF-8 -t UTF-16 > out.txt\n"
"\n"
msgstr ""
"    unix2dos < in.txt | iconv -f UTF-8 -t UTF-16 > uit.txt\n"
"\n"

#. type: =head1
#: dos2unix.pod:450
msgid "EXAMPLES"
msgstr "VOORBEELDEN"

#. type: textblock
#: dos2unix.pod:452
msgid "Read input from 'stdin' and write output to 'stdout'."
