#. type: textblock
#: dos2unix.pod:462
msgid "Convert and replace a.txt in ascii conversion mode."
msgstr "Omzetten en vervangen van a.txt in ascii-conversiemodus."

#. type: verbatim
#: dos2unix.pod:464
#, no-wrap
msgid ""
"    dos2unix a.txt\n"
"\n"
msgstr ""
"    dos2unix a.txt\n"
"\n"

#. type: textblock
#: dos2unix.pod:466
